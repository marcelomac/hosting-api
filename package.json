    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/marked": "^6.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
